<#assign dateformat= "com.enation.framework.directive.DateformateDirective"?new()>				
<div class="main" style="background-color: white;" >
	<div class="easyui-panel" style="border-style: none;">
		<div style="padding: 10px 0 10px 20px">
			<form id="actForm" method="post" class="validate">
				<table>
					<tr>
						<td>活动名称:</td>
						<td><input class="input_text easyui-validatebox" type="text" id="name" name="act_name" data-options="required:true" ></input></td>
					</tr>
					<tr>
						<td>开始时间：</td>
						<td>
							<input  type="easyui-datebox" style="height: 28px;"  name="start_time" data-options="required:true"  ></input>
							开始时间不能早于：<@dateformat time='${groupbuyActStartTime}' pattern='yyyy-MM-dd'/>
						</td>
					</tr>
					<tr>
						<td>结束时间：</td>
						<td><input  class="easyui-datebox" data-options="required:true" style="height: 28px;" type="text"   name="end_time"></input></td>
					</tr>
					<tr>
						<td>报名截止时间：</td>
						<td><input  class="easyui-datebox" data-options="required:true"  style="height: 28px;" type="text"   name="join_end_time"></input> </td>
					</tr>
				</table>
			</form>
		</div>
	</div>
</div>
<script type="text/javascript">
$("input[name='start_time']").datebox( {
    fit : true,
    formatter : function(date) {
    	if(date/1000>${groupbuyActStartTime}){
    		return date.format('yyyy-MM-dd');
    	}
        return false;  
    }
});
</script>