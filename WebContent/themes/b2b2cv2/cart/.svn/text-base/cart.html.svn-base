<#assign  title="购物车" />
<#include '/common/header.html' />
<@css src="css/cart.css" />
<script  src="${ctx}/themes/b2b2cv2/js/StoreCart.js"  ></script>
<!--正文-->
<div id="main">
	<div id="cart_wrapper">
		<!--购物进程提示-->
		<div class="cart_nav">
			<div class="step1">
			<#if locale=="zh">
				<@image src="images/gwc.jpg" alt="购物车及购物车进程" />
				<#elseif locale=="ru">
				<@image src="images/gwc.jpg" alt="Корзина тележки процесс покупки" />
			</#if>
			</div>
		</div>
		<!--购物进程提示结束-->
		<!--商品列表-->
		<div class="goods_list">
			<!--选购物品标题-->
			<#include 'cart_item.html' />
		</div>
		<!--商品列表结束-->
	<!--购物车推荐商品-->
	<div class="shop_rec">
		<div class="shop_caption">
			<h1><@uiLabel text="goods.RecommendForYou" /></h1>
		</div>
		<#include 'cart_recomm.html'/>
	</div>
	<!--购物车推荐商品结束-->
	</div>
</div>
<#include '/common/footer.html'/>