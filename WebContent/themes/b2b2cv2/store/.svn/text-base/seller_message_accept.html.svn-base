<#include '/store/store_header.html' /> <#assign title="收到信息" />
<!-- 获取买家消息列表标签 -->
<#assign acceptMessageTag = newTag("acceptMessageTag")>
<!-- 调用买家列表标签 -->
<#assign acceptMessage = acceptMessageTag()>
<!-- 将调用的结果赋值给变量 -->
<#assign acceptMessageList = acceptMessage.result>
<script language="javascript" type="text/javascript"
	src="${ctx}/themes/b2b2cv2/js/My97DatePicker/WdatePicker.js"></script>
<link rel="stylesheet" href="${ctx}/themes/b2b2cv2/css/easydialog.css"
	type="text/css" />
<#if locale=="zh">
   <script type="text/javascript" src="${ctx}/themes/b2b2cv2/js/easydialog.js"></script>
   <script type="text/javascript" src="${ctx}/themes/b2b2cv2/js/easydialog.min.js"></script> 
<#elseif locale=="ru">
  	<script type="text/javascript" src="${ctx}/themes/b2b2cv2/js/easydialog_ru.js"></script>
  	<script type="text/javascript" src="${ctx}/themes/b2b2cv2/js/easydialog_ru.min.js"></script> 
</#if>
<div class="store_center">
	<#include '/store/left_menu.html' />

	<div class="sotre_right_content">
		<div class="path">
			<span style="color: #999;"><@uiLabel text="sellermessageaccept.yourlocation" />：</span> <span>></span> <a href="#"><!-- 您的位置 -->
				<@uiLabel text="sellermessageaccept.zhanneixin" /></a><span>></span><@uiLabel text="sellermessageaccept.shoudaoxinxi" /><!--站内信 --><!--收到信息-->
		</div>
			<div class="order_title_nav">
                <for method="basic-form" id="messageSearch" action="">
                    <table class="search_form">
                        <tbody>
                        <tr>
                        	<td style="border-bottom: 1px solid #e7e7e7;width:28px">&nbsp;</td>
			  				<th style="border-bottom: 1px solid #e7e7e7;"><@uiLabel text="index.InformationStatus" /></th>
			  				<td style="border-bottom: 1px solid #e7e7e7;width:25px">&nbsp;</td>
                            <td>
                                <select id="message_state" name="message_state" class="input_text">
                                    <option selected="selected" value=""><@uiLabel text="index.ProtalMesAll" /></option>
                                    <option value="CHECKED">
                                       <@uiLabel text="index.ProtalMesHasRead" />
                                    </option>
                                    <option value="NO_CHECK">
                                        <@uiLabel text="index.ProtalMesUnread" />
                                    </option>
                                </select>
                            </td>
                        	<td style="width:50px">&nbsp;</td>
                        	<th style="border-bottom: 1px solid #e7e7e7; "><!-- <@uiLabel text="index.BuyerName" /> --></th>
                        	<td style="width:10px">&nbsp;</td>
                        	<td><input name="buyer_name" id="buyer_name" class="text"  type="hidden" value="" ></td>
                        	<td></td>
                        	<td></td>
                        </tr>
                        <tr>
                        	
                            <td style="width:120px">&nbsp;</td>
                            <th style="border-bottom: 1px solid #e7e7e7;"><@uiLabel text="index.PortalUserStartTime" /></th>
                            <td style="width:20px">&nbsp;</td>
                            <td style="width:302px ; margin-right:50px">
                                <input name="start_message_time" id="start_message_time" class="text" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})" readonly="readonly" type="text">
                                –
                                <input name="end_message_time" id="end_message_time" class="text" onfocus="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm:ss'})" readonly="readonly" type="text">
                            </td>
                            <td style="width:100px">&nbsp;</td>
                            <th style="border-bottom: 1px solid #e7e7e7;">&nbsp;</th>
                            <td style="width:20px">&nbsp;</td>
                            <td style="padding-left:80px">
                                <label class="submit-border">
                                    <input id="sellersearch" class="yellow_btn" value="<@uiLabel text="index.Searchfor" />" type="button">
                                </label>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </form>
                </div>
                 <div class="address_list">
					<table cellpadding="0" cellspacing="0" style="TABLE-LAYOUT: fixed;border:2px solid #eee;" border="1" cellspacing="0" cellpadding="0" width="200">
						<thead>
							<tr>
								<th style="width:108px"><@uiLabel text="index.ProtalMesMessageID" /></th>
<#--								<th style="width:108px"><@uiLabel text="index.ProductID" /></th>  -->
								<th style="width:108px"><@uiLabel text="index.BuyerName" /></th>
								<th style="width:108px"><@uiLabel text="index.ProtalMesMessageTitle" /></th>
								<th style="width:108px" style="text-align:center"><@uiLabel text="index.ContentCf" /></th>
								<th style="width:108px"><@uiLabel text="index.MessageType" /></th>
								<th style="width:108px"><@uiLabel text="index.Senddate" /></th>
								<th style="width:78px"><@uiLabel text="index.CommOper" /></th>
							</tr>
						</thead>
						<tbody id="scroll-box">
					<#list acceptMessageList as message>
						<tr>
						   <td>${message.message_id!}</td>
<#--						   <td>${message.goods_id!}</td>    -->
						   <td>${message.email!}</td>
						   <td id="t${message.message_id!}" style="WORD-WRAP: break-word">${message.message_title!}</td>
						   <td id="c${message.message_id!}" style="WORD-WRAP: break-word">
							<@substring title="${message.message_text!''}" length="50" dot="..." />
							<span id="o${message.message_id!}" style="display: none;">
							${message.message_text!''}
							</span>
							</td>
						   <td>${(message.message_type)!}</td>
						   <td><@dateformat time="${(message.send_date)!}" pattern="yyyy-MM-dd HH:mm:ss"/></td>
						   <td><button style="margin-left:23px" class='yellow_btn' onclick=lookMessage(${message.message_id!})> <@uiLabel text="index.PortalUserCheckOut" /> </button></td>
						</tr>
						</#list>
						</tbody>
					</table>
				</div>
	<@pager pageno="${page!'1'}" pagesize="${acceptMessage.pageSize}" totalcount="${acceptMessage.totalCount}" />
</div>
<script type="text/javascript">
	//	查看消息
	function openMessage(messageId) {
	    $.ajax({
	        url: "../api/b2b2c/sellerMessage!openMessage.do?ajax=yes&message_id=" + messageId,//要访问的后台地址
	        data: "json",//要发送的数据
	    });
	}
	
    function lookMessage(messageId) {
    	openMessage(messageId);
        easyDialog.open({
            container: {
                header: '<@uiLabel text="index.DialogNewsDetails" />',
                content: '&nbsp;&nbsp;<@uiLabel text="index.ProtalMesMessageTitle" />:&nbsp;&nbsp;' + $("#t" + messageId).html() + '<br/><br/>&nbsp;&nbsp;<@uiLabel text="index.DialogMessageContent" />：&nbsp;&nbsp;' + $("#o" + messageId).html(),
               
                noFn : true ,  
                yesText : '<@uiLabel text="sellermessageaccept.ImgBoxSave" />' //保存
            }
        });
    }
  //收到的消息
  function sellersearch(){
    	var start_message_time = $("#start_message_time").val();
    	var end_message_time = $("#end_message_time").val();
    	var message_state = $("#message_state").val();
    	var goods_id = $("#goods_id").val();
    	var buyer_name = $("#buyer_name").val();
    	location.href="seller_message_accept.html?start_message_time=" + start_message_time +"&end_message_time=" + end_message_time +"&message_state=" + message_state +"&goods_id=" + goods_id +"&buyer_name=" + buyer_name;
    }
 $(function(){
	$("#sellersearch").click(function(){
		sellersearch();
	})
 })
</script>
</div>
<#include '/common/seller_footer.html' />
