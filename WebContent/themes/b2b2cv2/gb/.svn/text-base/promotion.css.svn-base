@charset "utf-8";
/* CSS Document */
*{ margin:0px auto; padding:0px;}
.promotion-logo{  height:100px; border:1px solid #eee; margin:0px auto;}
.promotion-logo  img{ margin:0px auto; display:block; padding-top:20px;}
.promotion-banner{ background:url(img/promotion-banner.jpg) no-repeat; height:440px;}
.promotion-time{ height:140px; }
.promotion-time_name{ margin:0px auto; font-family:"Times New Roman","微软雅黑","黑体";font-size:20px; font-weight:bold; letter-spacing:5px;width:800px;text-align:center; padding-top:20px;}
.promotion-time_countdown{ width:400px; margin:0xp auto; padding-top:10px;}
.promotion-center{ background:url(img/promotion-background1.jpg) no-repeat; height:2048px;}
.promotion-center-top{ width:970px; height:570px; padding-top:150px;color:#fff;font-family:"Times New Roman","微软雅黑","黑体"; margin:0px auto;}
.promotion-center-top-one{ width:270px; float:left;margin-left:150px;margin-top:200px;}
.top-one-introduction{ width:250px; text-align:right;color:#fff; font-size:18px;font-family:"Times New Roman","微软雅黑","黑体";padding-top:10px;}
.top-one-price{ margin-top:20px;}
.top-one-price-yj{ font-size:30px; text-decoration:line-through;padding-right:10px;}
.top-one-price-cxj{font-size:54px; font-weight:bolder;}
.top-one-price-button{ width:180px; height:40px; line-height:40px; border:2px solid #fff; background:#000; opacity:0.7; color:#fff; border-radius:10px;font-size:22px; cursor:pointer; margin-top:20px;float:right}
.top-one-price-button:hover{ color:#f00;}
.promotion-center-top-two{ width:180px; float:right; margin-top:230px;margin-right:30px;}
.promotion-center-top-three{width:270px; float:left;margin-top:200px;}
.promotion-center-top-four{width:270px;margin-top:230px; float:right;margin-right:200px;}
.promotion-center-center{ height:550px;padding-top:50px;color:#fff;font-family:"Times New Roman","微软雅黑","黑体";margin:0px auto; position:relative; display:block; width:930px;}
.promotion-center-center img{ display:block;}
.promotion-center-center-tittle{ width:460px; height:180px; margin-top:450px;float:right; }
.center-tittle-introduction{margin-bottom:20px; text-align:right;color:#fff; width:360px; font-size:18px;font-family:"Times New Roman","微软雅黑","黑体";padding-top:10px; float:right;}
.center-tittle-price{ text-align:right;}
.center-tittle-price-yj{font-size:30px; text-decoration:line-through;padding-right:10px;}
.center-tittle-price-cxj{font-size:54px; font-weight:bolder;}
.center-tittle-price-button{ float:left;}
.promotion-center-bottom{margin:0px auto; width:960px; height:630px;display:inline-block; font-family:"Times New Roman","微软雅黑","黑体"; color:#fff;}
.promotion-center-left{ width:640px; float:left; }
.promotion-center-right{ width:490px; float:right; clear:both;}
.promotion-center-left-continter{ float:right; margin-top:430px;}
.center-left-continter-introduction{text-align:right;color:#fff; width:160px; font-size:18px;padding-top:10px;}
.center-left-continter-price{margin-top:20px;}
.center-left-continter-price-yj{font-size:30px; text-decoration:line-through; display:block; text-align:right;}
.center-left-continter-price-cxj{margin-top:10px;font-size:54px; font-weight:bolder; display:block;}
.promotion-center-right-left{ float:left; width:250px; height:730px; position:relative; display:block;}
.promotion-center-right-right{ float:right; width:300px;position:relative;}
.promotion-center-right-one{ position:absolute; top:230px; left:100px;}
.promotion-center-right-two{ position:absolute; top:450px; left:100px;}
.promotion-center-right-three{ position:absolute; bottom:50px; left:100px;}
.promotion-center-right-right-continter{ height:430px;position:relative; bottom:1px;left:300px; width:200px;}
.promotion-foot{font-family:"Times New Roman","微软雅黑","黑体"; font-size:18px; color:#292929; margin:0px auto; clear:both;width:100%; margin-top:10px;margin-bottom:30px;}
.promotion-foot div { text-align:center;}