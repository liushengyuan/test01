<#include '/store/store_header.html' />
<#assign myGoodsListTag=newTag("myGoodsListTag")>
<#assign storeGoods=myGoodsListTag()>
<#-- 创建店铺商品分类标签 --> 
<#assign storeGoodsCatListTag= newTag("storeGoodsCatListTag") > 
<#-- 查询店铺商品分类列表 0表示查子分类 --> 
<#assign storeGoodsCatList= storeGoodsCatListTag("'type':0")!''>

<div class="store_center">
<#include '/store/left_menu.html' />
	<div id="sotre_right_content" class="sotre_right_content">
		<div class="path">
			<span style="color:#999;"><@uiLabel text="storeGoodsList.yourlocation"/>：</span><!--您的位置  -->
			<span>></span>
			<@uiLabel text="storeGoodsList.product"/><span>></span><@uiLabel text="storeGoodsList.productList"/><!-- 商品管理 --><!-- 商品列表 -->
		</div>
		<input type="hidden" value="${market_enable!0}" class="left_selected">
		<div class="store_right_main">
			<div class="tabmenu">
				<ul class="tab pngFix">
					<li class="active">
						<a href="#"><@uiLabel text="storeGoodsList.productList"/></a><!-- 商品列表 -->
					</li>
				</ul>
				<div class="store_goods_tool">
					<#if type??>
						<a class="ncu_btn3" id="saveRel" href="javascript:void(0);"><@uiLabel text="storeGoodsList.saveChecked"/></a><!-- 保存选中 -->
						<input type="hidden" id="tagId" value="${tagId}"/>
					<#else>
			  			<#if disable??>
			  				<a class="ncu_btn3" id="revert" href="javascript:void(0);"><@uiLabel text="storeGoodsList.restore"/></a><!--还原 -->
			  				<a class="ncu_btn3" id="clean" href="javascript:void(0);"><@uiLabel text="storeGoodsList.clean"/></a><!-- 清除 -->
			  			<#else>
							<a class="ncu_btn3 other_store_goods" id="deleteCheck" href="javascript:void(0);"><@uiLabel text="storeGoodsList.delete"/></a><!--删除 -->
							<a class="ncu_btn3" id="trash" href="javascript:void(0);"><@uiLabel text="storeGoodsList.Trash"/></a><!--回收站-->
	  					</#if>
			  		</#if>	
				</div>
			</div>
			<!-- 商品列表 -->
			<div class="store_goodslist">
				<table class="search_form">
			  		<tbody>
			  			<tr>
			  				<td style="width:500px">&nbsp;</td>
			  				<#-- <th>本店分类：</th>
			  				<td >
			  					<select name="store_cat">
			  						<option value="0">全部</option>
									<#list storeGoodsCatList as cat>
										<#if cat.store_cat_pid==0>
											<option value="${cat.store_cat_id}"
												<#if storeGoods.store_cat??> 
													<#if storeGoods.store_cat+""==cat.store_cat_id+""> 
														selected="selected"
													</#if> 
												</#if> 
											>${cat.store_cat_name!''}</option>
										</#if>
										<#list storeGoodsCatList as childCat>
											<#if childCat.store_cat_pid==cat.store_cat_id>
												<option value="${childCat.store_cat_id}" 
													<#if storeGoods.store_cat??> 
														<#if storeGoods.store_cat+""==childCat.store_cat_id+""> 
															selected="selected"
														</#if> 
													</#if> 
												>&nbsp;&nbsp;&nbsp;&nbsp;${childCat.store_cat_name!''}</option>
											</#if>
										</#list>
									</#list>
								</select>
							</td> -->
							<input type="hidden" name="market_enable" value="1"> 
			  				<th><@uiLabel text="storeGoodsList.goodsName"/>：</th><!--商品名称  -->
        					<td ><input type="text" class="text" name="goodsName" value="${storeGoods.goodsName!''}"></td>
        					<#-- <td>是否上架：
        						<select style="width: 100px;" name="market_enable">
        							<option <#if storeGoods.market_enable==-1> selected="selected"</#if> value="-1">&nbsp;&nbsp;请选择</option>
        							<option <#if storeGoods.market_enable==1> selected="selected"</#if> value="1">&nbsp;&nbsp;已上架</option>
        							<option <#if storeGoods.market_enable==0> selected="selected"</#if> value="0">&nbsp;&nbsp;未上架</option>
        						</select>
        					</td> -->
        					
			  				<td  style="float:right"><input type="button" class="submit" id="btnSearch" value="搜索" /></td>
			  			</tr>
			  		</tbody>
			  	</table>
			  	<#if storeGoods.storegoods.result??>
			  	<form id="storeGoodsForm">
				  	<table class="goodslist_bystore" cellpadding="0" cellspacing="0">
				  		<tbody>
				  			<#list storeGoods.storegoods.result as storeGoods>
				  			<tr>
				  				<th colspan="10"><@uiLabel text="storeGoodsList.productCode"/>：${storeGoods.sn!''}</th><!--商品货号  -->
				  			</tr>
				  			<tr>	
				  				<#if type??>
									<td ><input type="checkbox" name="reg_id" value="${storeGoods.goods_id}"/></td>
								<#else>
									<td ><input type="checkbox" name="goods_id" value="${storeGoods.goods_id}"></td>
								</#if>
				  				<td>
				  					<@image src="${storeGoods.thumbnail!''}" alt="${storeGoods.name!''}" height="50" width="50" /> 
				  				</td>
				  				<td style="text-align:left;line-height:25px">
			  						<a id="${storeGoods.goods_id}" target="_blank" href="${ctx}/goods-${storeGoods.goods_id}.html" style="color:#005ea6">
						    			${storeGoods.name}
									</a>
				  				</td>
				  				<td>
				  					${storeGoods.price?string.currency}
				  				</td>
				  				<td>
				  					${storeGoods.enable_store!''}<@uiLabel text="storeGoodsList.piece"/><!--件  -->
				  				</td>
				  				<td>
				  					<@dateformat time="${storeGoods.create_time?c}" pattern="yyyy-MM-dd HH:mm:ss"/>
				  				</td>
				  				<td>
				  					<#if storeGoods.market_enable==1><@uiLabel text="storeGoodsList.Added"/><#else><@uiLabel text="storeGoodsList.UnShelve"/></#if><!--上架  --><!--下架  -->
				  				</td>

				  			</tr>
				  			</#list>
				  		</tbody>
				  	</table>
			  	</form>
			  	<@pager pageno="${storeGoods.page!'1'}" pagesize="${storeGoods.storegoods.pageSize}" totalcount="${storeGoods.totalCount}" />
			  	<#else>
			  	<p class="no_blank"><@uiLabel text="storeGoodsList.zanwufuhe"/></p><!--暂无符合条件的数据记录  -->
			  	</#if>
			</div>
		</div>
	</div>
</div>
<script type="text/javascript">
$(function(){
	$("#btnSearch").click(function(){
		var goodsName=$("input[name='goodsName']").val();
		var store_cat=$("select[name='store_cat']").val();
		var market_enable=$("select[name='market_enable']").val();
		//location.href="store_goods_list.html?goodsName="+goodsName+"&store_cat="+store_cat+"&market_enable="+market_enable+"&menu=store_goods&type=tag&tagId=${tagId}&mark=${mark}";
		location.href="store_goods_list.html?goodsName="+goodsName+"&market_enable=1&menu=store_goods&type=tag&tagId=${tagId}&mark=${mark}";
	});
	$("a[name='updateStore']").click(function(){
		dialog = $.dialog({
			title : "修改库存信息",//修改库存信息
			lock : true,
			min : false,
			max : false
		});
		$.ajax({
			url : "goodsStore.html?goods_id="+$(this).attr("goods_id"),
			success : function(html) {
				dialog.content(html);
				dialog.button([ {
					name : '修改',//修改
					callback : function() {
						editStore();
						return false;
					}
				}]);
			},
			error : function() {
				$.alert("出现错误，请重试");//出现错误，请重试
			},
			cache : false
		});	
	});
	function editStore(){
		var reg=/^[0-9]*$/;
		if($(".one_storenum").val()!=undefined){
			if(!reg.test($(".one_storenum").val())){
				alert("<@uiLabel text='storeGoodsList.tianxieRealNum'/>");//请填写正确的数字
				return false;
			}
		}
		if($(".more_storenum").val()!=undefined){
			if(!reg.test($(".more_storenum").val())){
				alert("<@uiLabel text='storeGoodsList.tianxieRealNum'/>");//请填写正确的数字
				return false;
			}
		}
		
		var options = {
				url : "${ctx}/api/b2b2c/goods!saveGoodsStore.do",
				type : "POST",
				dataType : 'json',
				success : function(data) {	
					alert(data.message);
					if(data.result==1){
						location.reload();
					}
				},
				error : function(e) {
					alert("<@uiLabel text='storeGoodsList.chuxiancuowu'/>");//出现错误 ，请重试
				}
			};
		$("#goodsStoreForm").ajaxSubmit(options);
	}
	$("a[name='goodsOperation']").click(function(){
		if(!confirm("<@uiLabel text='storeGoodsList.really'/>确定要"+$(this).attr("val")+"？"))//确定要    吗
			return false;
		var operation=$(this).attr("operational");
		$.ajax({
			url : "${ctx}/api/b2b2c/goods!"+operation+".do?goods_id="+$(this).attr("goods_id"),
			cache : false,
			dataType : 'json',
			success : function(json) {
				alert(json.message);
				if(json.result==1)
					location.href="store_goods_list.html?menu=store_goods";
			},
			error : function() {
				alert("<@uiLabel text='storeGoodsList.chuxiancuowu'/>");//出现错误 ，请重试
			}
		});	
	});
	$("#deleteCheck").click(function(){
		var options = {
				url : "${ctx}/api/b2b2c/goods!deleteGoods.do",
				type : "POST",
				dataType : 'json',
				success : function(data) {	
					alert(data.message);
					$("input[name='goods_id']").attr("checked", false);           //取消删除商品后，页面剩余同样位置的商品仍然是选中状态;
					location.href="store_goods_list.html?menu=store_goods";
				},
				error : function(e) {
					alert("<@uiLabel text='storeGoodsList.chuxiancuowu'/>");//出现错误 ，请重试
				}
			};
		$("#storeGoodsForm").ajaxSubmit(options);
	});
	$("#revert").click(function(){
		var options = {
			url : "${ctx}/api/b2b2c/goods!revert.do",
			type : "POST",
			dataType : 'json',
			success : function(data) {	
				alert(data.message);
				location.reload();
			},
			error : function(e) {
				alert("<@uiLabel text='storeGoodsList.chuxiancuowu'/>");//出现错误 ，请重试
			}
		};
		$("#storeGoodsForm").ajaxSubmit(options);
	});
	$("#clean").click(function(){
		var options = {
				url : "${ctx}/api/b2b2c/goods!cleanGoods.do",
				type : "POST",
				dataType : 'json',
				success : function(data) {	
					alert(data.message);
					location.reload();
				},
				error : function(e) {
					alert("<@uiLabel text='storeGoodsList.chuxiancuowu'/>");//出现错误 ，请重试
				}
			};
			$("#storeGoodsForm").ajaxSubmit(options);
	});
	<#if type??>
	$("#saveRel").click(function(){
		var options = {
				url : "${ctx}/api/b2b2c/tag!saveRel.do?tagId=${tagId}",
				type : "POST",
				dataType : 'json',
				success : function(data) {	
					alert(data.message);
					location.href="${ctx}/goods/tagGoodsShow.html?tagid=${tagId}&mark=${mark}&menu=store_goods";
				},
				error : function(e) {
					alert("<@uiLabel text='storeGoodsList.chuxiancuowu'/>");//出现错误 ，请重试
				}
			};
		$("#storeGoodsForm").ajaxSubmit(options);
	});
	</#if>
	$("#trash").click(function(){
		window.open("store_goods_list.html?disable=1&menu=store_goods")
	});
	
})
</script>
<script>
$(function(){
	var leftselected = $(".left_selected").val();
	if(leftselected=="1"){
		selectMenu(1);
	}
	if(leftselected=="0"){
		selectMenu(2);
	}
	//设置商品名的颜色为紫色
	var colorFlag=GetQueryString("colorFlag");
	var color_goods_id = GetQueryString("goods_id");
	if(colorFlag !=null)
	{
		$("#"+color_goods_id).attr({ style : "color:#9B30FF"});
	}
})
//获取URL中的参数
function GetQueryString(name)
{
     var reg = new RegExp("(^|&)"+ name +"=([^&]*)(&|$)");
     var r = window.location.search.substr(1).match(reg);
     if(r!=null)return  unescape(r[2]); return null;
}
</script>

<#include '/common/seller_footer.html' />