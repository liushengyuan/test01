//搜索
function searchGoods(){
	
	var searchtype = 0;
	var keyword = $("#searchKeyword").val();
	var auditStatus = $("#auditStatus").val();
	//var name = $("#name").val();
	//var sn = $("#sn").val();
	//var catid = $("#catid").combo('getValue');
	var storeName=$("#storeName").val();
	$('#goodsdata').datagrid('load', {
		 stype:searchtype,
		 keyword:keyword,
		 storeName:storeName,
		 auditStatus:auditStatus,
		 //name:name,
		 //sn:sn,
		 //catid:catid,
		 page:1
    }); 
}
//审核
function edit(goodsId){
	 $("#Goodinfo").show();
	　　	$('#Goodinfo').dialog({
	　　		title: '商品审核',			
	　　		width: 750,
	　　		closed: false,
	　　		cache: false,
	　　		href: '${ctx}/shop/admin/goods!auditGoods.do?goodsId='+goodsId, 	 
	　　		modal: true,
	　　		buttons: [{					
	　　			 text:'保存',
	　　			 iconCls:'icon-ok',
	　　			 handler:function(){
	　　				 var disabled=  $(this).hasClass("l-btn-disabled");
	　　				 if(!disabled){
	　　					var editbtn = $(this);
		　　				editTeamForm(editbtn);		
		　　			}
　				 }
　			 },{
	　　			 text:'还原',
	　　			 handler:function(){
	　　				 $('#goodsInfoForm')[0].reset() ;
	　　			 }
	　　		}]
	　　	}); 
}
function editTeamForm(editbtn){
	var formflag= $("#goodsInfoForm").form().form('validate');
	if(formflag){
		$.Loading.show("正在保存请稍候...");
		editbtn.linkbutton("disable");
		var options = {
				url : "${ctx}/shop/admin/goods!saveAuditGoods.do?ajax=yes",
				type : "POST",
				dataType : "json",
				success : function(result) {
					if(result.result==1){
						$.Loading.success(result.message);
						$("#Goodinfo").dialog('close');
						$('#goodsdata').datagrid('reload');
					}else{
						$.Loading.error(result.message);
					}
					editbtn.linkbutton("enable");
			 	},
			 	error : function(e) {
			 		$.Loading.error("出现错误 ，请重试");	
			 		editbtn.linkbutton("enable");
				}
		};
		$('#goodsInfoForm').ajaxSubmit(options);
	}
}
