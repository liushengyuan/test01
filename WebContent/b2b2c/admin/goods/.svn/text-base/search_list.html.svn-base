function openProductInfo(goodsId){
	$("#Goodinfo").show();
　　	$('#Goodinfo').dialog({
　　		title: '商品详情',
　　		width: 900,
　　		closed: false,
　　		cache: false,
　　		href: '${ctx}/shop/admin/goods!getProductInfo.do?goodsId='+goodsId,
　　		modal: true,
　　		buttons: [{
　　			 text:'关闭',
　　			 iconCls:'icon-ok',
　　			 handler:function(){
　　				$("#Goodinfo").dialog('close');
　　			}
			 }]
　　	});
