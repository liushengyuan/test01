<#assign regionSelectDirective="com.enation.app.shop.core.tag.regions.RegionSelectDirective"?new()>
<#assign dataformat="com.enation.framework.directive.DateformateDirective"?new()/>

<style>
.input_text {
	width: 200px;
}
</style>
<div class="main" style="background-color: white;">
	<div class="easyui-panel" style="border-style: none;">
		<div style="padding: 10px 0 10px 20px">
			<form id="addForm" method="post" class="validate">
				<input type="hidden" name="name_auth" value="0">
				<input type="hidden" name="store_auth" value="0">
				<table>
					<tr>
						<td>店铺账号：</td>
						<td style="width: 290px;">
							${uname}
							<input  type="hidden" name="member_name" value="${uname}" />
						</td>
						<td>身份证号：</td>
						<td>
							<input class="input_text easyui-validatebox" type="text" name="id_number" data-options="required:true" value=""></input>
						</td>
					</tr>
					<tr>
						<td>店铺名称：</td>
						<td>
							<input class="input_text easyui-validatebox" type="text" data-options="required:true" name="store_name" value=""></input>
						</td>
						<td>状态：</td>
						<td>
							<select name="disabled">
								<option value="1" >开启</option>
								<option value="0" >关闭</option>
							</select>
						</td>
					</tr>
					<tr>
						<td>所在地：</td>
						<td width="250px;"><@regionSelectDirective  province_name='store_province' city_name='store_city' region_name='store_region'/></td>

						<td>详细地址：</td>
						<td><input class="input_text easyui-validatebox" type="text" name="attr" value=""></input></td>
					</tr>
					<tr>
						<td>邮编：</td>
						<td><input class="input_text easyui-validatebox" type="text" name="zip" value=""></input></td>
						<td>联系电话：</td>
						<td><input class="input_text easyui-validatebox" type="text" name="tel" value=""></input></td>
					</tr>
					<tr>
						
						<td>店铺佣金比例：</td>
						<td colspan="3">
							<input class="easyui-numberbox input_text" type="text" name="commission"/>
							如果输入10.平台佣金为订单价格的百分之10
						</td>
					</tr>
					<tr>
						<td>银行开户名：</td>
						<td colspan="3">
							<input class="easyui-numberbox input_text" type="text" name="bank_account_name"/>
						</td>
					</tr>
					<tr>
						<td>公司银行账号：</td>
						<td colspan="3">
							<input class="easyui-numberbox input_text" type="text" name="bank_account_number"/>
						</td>
					</tr>
					<tr>
						<td>开户银行支行名称：</td>
						<td colspan="3">
							<input class="easyui-numberbox input_text" type="text" name="bank_name"/>
						</td>
					</tr>
					<tr>
						<td>支行联行号：</td>
						<td colspan="3">
							<input class="easyui-numberbox input_text" type="text" name="bank_code"/>
						</td>
					</tr>
					<tr>
						<td>开户银行地址：</td>
						<td colspan="3">
							<@regionSelectDirective  province_name='bank_province' city_name='bank_city' region_name='bank_region'/>
						</td>
					</tr>
						
				</table>
				<input type="hidden" name="storeId" value="">
			</form>
		</div>
	</div>
</div>
